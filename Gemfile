source 'https://rubygems.org'

gem 'rails', '4.1.4'

# Database
gem 'mysql2'

# Assets
gem 'sass-rails'
gem 'compass-rails'
gem 'uglifier'
gem 'coffee-rails'

# jQuery
gem 'jquery-rails'

# Setting utility - config/application.yml
gem 'settingslogic'

# AWS integration
gem 'aws-sdk'

# Exception Notification
gem 'exception_notification'

# Javascript Runtime
gem 'therubyracer'

group :development do
  # Debugging
  gem 'better_errors'
  gem 'binding_of_caller'

  # Deploy
  gem 'capistrano'
  gem 'capistrano-rails'
  gem 'capistrano-bundler'
  gem 'capistrano-rbenv'

  # Speed up loading
  gem 'spring'
end

group :production do
  # App Server
  gem 'unicorn'
end